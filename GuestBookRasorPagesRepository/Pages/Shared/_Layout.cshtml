<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuestBookRasorPagesRepository</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GuestBookRasorPagesRepository.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="align-items: end">
                <a class="navbar-brand" style="color: blue" asp-area="" asp-page="./Index" >Home page</a>
                <a class="navbar-brand" style="color: blue" asp-area="" asp-page="./Register" >Registration</a>
                @if (Context.Session.GetString("Login") == null)
                {
                    <a class="navbar-brand" style="color: blue" asp-area="" asp-page="./Login" >Logоn</a>
                }
                else
                {
                    <span class="name" style="margin-bottom:0px;">Hello, @Context.Session.GetString("Login") </span>
                    <a class="navbar-brand" style="color: blue" asp-area="" asp-page="./Logout" >Logout</a>
                }
            </div>
        </nav>
    </header>
    <div class="container" style="max-width:1450px; padding:0px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - GuestBook
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>