@page
@model GuestBookRasorPagesRepository.Pages.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="MyContainer">
    <div class="name">Logon</div>
    <div class="col-md-4">
        <form asp-page="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login.Login" class="control-label"></label>
                <input asp-for="Login.Login" class="form-control" />
                <span asp-validation-for="Login.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Password" class="control-label"></label>
                <input asp-for="Login.Password" class="form-control" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>
            <br />
            <input type="submit" value="Logon" class="btn btn-primary" />
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}