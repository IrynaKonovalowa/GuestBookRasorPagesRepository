@page
@model GuestBookRasorPagesRepository.Pages.CreateModel
@{
	ViewBag.Title = "Create";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class=" MyContainer">
    <div class="name">Add review:</div>
    <div class="row film">
        <div class="col-md-4">
            <form asp-page="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <textarea asp-for="Message.Message" class="form-control"></textarea>
                    <span asp-validation-for="Message.Message" class="text-danger"></span>
                </div>
                <br />
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
